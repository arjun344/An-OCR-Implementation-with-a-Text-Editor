<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.airgaz.scanner.Tab2"
    android:orientation="vertical"
    android:id="@+id/idlinear">

    <android.support.v7.widget.CardView android:id="@+id/tools2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:background="#0e2f63">

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0e2f63"
            android:layout_gravity="center">

            <ImageButton android:id="@+id/crop"
                android:contentDescription="@null"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_crop_black_24dp"
                android:scaleType="center"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground">
            </ImageButton>

        </LinearLayout>

    </android.support.v7.widget.CardView>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/tools"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:textSize="10dp"
            android:background="@android:color/transparent">
        </ImageView>



</RelativeLayout>
